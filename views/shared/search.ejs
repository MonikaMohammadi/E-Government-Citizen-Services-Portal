<%- include('../partials/header') %>

<div class="container mt-4">
  <h2>Search Requests</h2>

  <form action="/search" method="POST" class="mb-4">
    <div class="row">
      <div class="col-md-3">
        <input type="text" class="form-control" name="name" placeholder="Citizen Name" value="<%= filters.name || '' %>">
      </div>
      <div class="col-md-2">
        <input type="text" class="form-control" name="requestId" placeholder="Request ID" value="<%= filters.requestId || '' %>">
      </div>
      <div class="col-md-2">
        <select class="form-control" name="status">
          <option value="">-- Status --</option>
          <option value="pending" <%= filters.status==='pending' ? 'selected' : '' %>>Pending</option>
          <option value="under_review" <%= filters.status==='under_review' ? 'selected' : '' %>>Under Review</option>
          <option value="approved" <%= filters.status==='approved' ? 'selected' : '' %>>Approved</option>
          <option value="rejected" <%= filters.status==='rejected' ? 'selected' : '' %>>Rejected</option>
        </select>
      </div>
      <div class="col-md-2">
        <input type="text" class="form-control" name="serviceType" placeholder="Service Type" value="<%= filters.serviceType || '' %>">
      </div>
      <div class="col-md-3">
        <input type="date" class="form-control mb-1" name="startDate" value="<%= filters.startDate || '' %>">
        <input type="date" class="form-control" name="endDate" value="<%= filters.endDate || '' %>">
      </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Search</button>
  </form>

  <% if (results) { %>
    <h4>Results:</h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Citizen</th>
          <th>Service</th>
          <th>Status</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% if (results.length > 0) { %>
          <% results.forEach(r => { %>
            <tr>
              <td><%= r.id %></td>
              <td><%= r.citizen_name %></td>
              <td><%= r.service_name %></td>
              <td><%= r.status %></td>
             <td><%= new Date(r.submitted_at).toDateString() %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr><td colspan="5" class="text-center">No results found</td></tr>
        <% } %>
      </tbody>
    </table>
  <% } %>
</div>

<%- include('../partials/footer') %>
